<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/custom_view_profile_image_iv"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="18dp"
        android:foreground="@drawable/bg_circle_view"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toTopOf="@+id/custom_view_profile_introduce_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/custom_view_profile_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Name"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/custom_view_profile_image_iv"
        app:layout_constraintTop_toTopOf="@+id/custom_view_profile_image_iv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/custom_view_profile_club_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:text="Name"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/custom_view_profile_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/custom_view_profile_name_tv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/custom_view_profile_introduce_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="24dp"
        android:text="우리는 짱짱 개 쩌는 동아리 입니다."
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/custom_view_profile_image_iv"
        app:layout_constraintTop_toBottomOf="@+id/custom_view_profile_image_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>