<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.dsm.unlimited.applebox_android.viewmodel.MainProfileViewModel" />
        <import type="android.view.View"/>
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <com.dsm.unlimited.applebox_android.customview.CustomProfileView
        android:id="@+id/customProfileView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:introduce="안녕 나는 전승민이야\nGIT : www.github.com/nwar-Jeon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:name="전승민"
        app:subName="Unlimited" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="@{vm.isMyProfile() ? View.INVISIBLE : View.VISIBLE}"
        android:text="message"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customProfileView"
        app:strokeColor="@color/colorPrimary" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton2"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="@{vm.isMyProfile() &amp;&amp; !vm.isEditMode() ? View.VISIBLE : View.INVISIBLE}"
        android:onClick="@{() -> vm.editProfile()}"
        android:text="프로필 수정"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialButton"
        app:strokeColor="@color/colorPrimary" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton3"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:onClick="@{() -> vm.applyEditProfile()}"
        android:text="저장"
        android:textSize="10sp"
        android:visibility="@{vm.isEditMode() ? View.VISIBLE : View.INVISIBLE}"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/materialButton2"
        app:strokeColor="@color/colorPrimary" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:visibility="@{vm.isEditMode() ? View.VISIBLE : View.INVISIBLE}"
        android:onClick="@{() -> vm.cancelEditProfile()}"
        android:text="취소"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/materialButton3"
        app:layout_constraintTop_toTopOf="@+id/materialButton3" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>