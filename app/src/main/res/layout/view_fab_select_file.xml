<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/view_fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:foreground="@drawable/bg_fab"
        app:backgroundTint="@android:color/white"
        app:borderWidth="2dp"
        app:elevation="6dp"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/view_fab_close"
        app:layout_constraintEnd_toEndOf="@+id/view_fab_close"
        app:layout_constraintStart_toStartOf="@+id/view_fab_close"
        app:layout_constraintTop_toTopOf="@+id/view_fab_close" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/view_fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="@drawable/bg_fab"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:backgroundTint="@android:color/white"
        app:borderWidth="2dp"
        app:elevation="6dp"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/view_fab1"
        app:layout_constraintEnd_toEndOf="@+id/view_fab1" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/view_fab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="@drawable/bg_fab"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:backgroundTint="@android:color/white"
        app:borderWidth="2dp"
        app:elevation="6dp"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/view_fab1"
        app:layout_constraintEnd_toEndOf="@+id/view_fab1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/view_fab_close"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/ripple_circle_effect_primarybackground"
        android:padding="4dp"
        android:clickable="true"
        android:src="@drawable/ic_close_black_24dp"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>